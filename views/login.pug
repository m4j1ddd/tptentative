extends layout

block content
    .container.row
      .jumbotron.col-sm-4.pull-center
        form(action='/login', method='post')
          div
            label UserId:
            input(type='text', name='userId')
          div
            label Password:
            input(type='password', name='password')
          div
            input.btn.btn-primary(type='submit', value='Log In')
